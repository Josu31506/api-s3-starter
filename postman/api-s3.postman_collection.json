{
  "info": {
    "name": "API S3",
    "_postman_id": "a1b2c3d4-0000-4444-9999-abcdefabcdef",
    "description": "Colecci\u00f3n para probar API S3 creada con Serverless",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://REEMPLAZA.execute-api.us-east-1.amazonaws.com/dev"
    }
  ],
  "item": [
    {
      "name": "Lista Buckets",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/s3/lista-buckets",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "s3",
            "lista-buckets"
          ]
        }
      }
    },
    {
      "name": "Lista Objetos Bucket",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/s3/bucket/lista-objetos",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "s3",
            "bucket",
            "lista-objetos"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"bucket\": \"mi-bucket-2025-demo-xxxxx\", \"prefix\": \"catalogo-productos/\"}"
        }
      }
    },
    {
      "name": "Crear Bucket",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/s3/crear-bucket",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "s3",
            "crear-bucket"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"bucket\": \"mi-bucket-2025-demo-xxxxx\", \"region\": \"us-east-1\"}"
        }
      }
    },
    {
      "name": "Crear Directorio",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/s3/crear-directorio",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "s3",
            "crear-directorio"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"bucket\": \"mi-bucket-2025-demo-xxxxx\", \"directorio\": \"catalogo-productos/imagenes-chicas\"}"
        }
      }
    },
    {
      "name": "Subir Archivo (base64)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/s3/subir-archivo",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "s3",
            "subir-archivo"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"bucket\": \"mi-bucket-2025-demo-xxxxx\", \"directorio\": \"catalogo-productos/imagenes-chicas\", \"filename\": \"galleta01-small.png\", \"content_base64\": \"REEMPLAZA_CON_BASE64\"}"
        }
      }
    }
  ]
}